# Configurações da API
API_V1_STR=/api/v1
PROJECT_NAME=DataPlane API
VERSION=1.0.0
DEBUG=true

# Configurações do servidor
HOST=0.0.0.0
PORT=8000

# Configurações de segurança
API_TOKEN=your_api_token_here

# Configurações do MongoDB
# Credenciais do superusuário para a inicialização do banco de dados.
# O MongoDB usa estas variáveis para criar o usuário root na primeira vez que o container sobe.
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin

# Credenciais do usuário da aplicação (serão criadas pelo script de inicialização)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=dataplane
MONGODB_USERNAME=dataplane_user
MONGODB_PASSWORD=dataplane_password
MONGODB_AUTH_SOURCE=admin

# Configurações de CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log