# Configurações da API
API_V1_STR=/api/v1
PROJECT_NAME=DataPlane API
VERSION=1.0.0
DEBUG=true

# Configurações do servidor
HOST=0.0.0.0
PORT=8000

# Configurações de segurança
API_TOKEN=your_api_token_here

# Configurações do MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=dataplane
MONGODB_USERNAME=dataplane_user
MONGODB_PASSWORD=dataplane_password
MONGODB_AUTH_SOURCE=admin

# Configurações da IA
AI_MODEL_PATH=./models/checkpoint
AI_MODEL_NAME=gpt2
AI_MAX_LENGTH=512
AI_TEMPERATURE=0.7

# Configurações de CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Carregar modelo na inicialização (true/false)
LOAD_AI_MODEL_ON_STARTUP=false 